  <% if obj.errors.any? %> 
    <div class="alert alert-danger" data-bs-dismiss="alert">
      <h2>The following errors preventing the <%= obj.class.name.downcase %> from being saved</h2>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>